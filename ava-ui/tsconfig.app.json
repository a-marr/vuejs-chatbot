{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "types": [
      "vite/client",
      "@aws-amplify/ui-vue"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@primevue/*": [
        "node_modules/primevue/*"
      ]
    }
  }
}